<!DOCTYPE html>
<html lang="en">
    <!-- Name: Carpio, Rionald S. -->
    <!-- Section: BT-703 -->
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rio Carpio | Todo List</title>
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
    <div class="container">
        <h1>RIO CARPIO'S TODO LIST</h1>

        <div class="task-info">
            <h6>TASK INFORMATION</h6>
            <div class="add-container">
                <div class="input-group">
                    <input id="textTask" type="text" placeholder="New Task">
                    <button id="btn-submit">Add</button>
                </div>
            </div>
            <div class="edit-container">
                <div class="input-group">
                    <input id="taskID" type="hidden">
                    <input id="updateTask" type="text" placeholder="Edit Task">
                    <button id="btn-update">Update</button>
                    <button id="btn-cancel">Cancel</button>
                </div>
            </div>
        </div>

        <div class="todo-table">
            <h6>TODO TABLE</h6>
            <div class="form-group">
            <input id="textSearch" type="search" placeholder="Search Task...">
            </div>
            <div class="form-group">
                <table border="1" cellpadding="0" cellspacing="0">
                    <thead>
                        <th>#</th>
                        <th style="display: none;">ID</th>
                        <th>Task</th>
                        <th>Done</th>
                        <th>Actions</th>
                    </thead>
                    <tbody id="table-body">
                        <% todos.forEach((todo, index) => {%>
                            
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

